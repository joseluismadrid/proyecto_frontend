{{>header}}
<link rel="stylesheet" href="../css/acudientes/index.css">

{{>head}}

<!-- page content -->
<main>
  <div class="right_col" role="main">
    <section>
      <div class="titulo_p">
        <h1>Gestion de Acudientes</h1>
      </div>
      <div class="titulo_s">
        <h4>Agregar Acudiente</h4>
      </div>

      <a href="registrarAcudiente"><img src="../images/boton-mas.png" alt="icon" class="icon_add"
          id="btn-abrir-modal"></a>

    </section>
    <section class="search_icon">
      <form class="form-inline">
        <div>
          <input class="form-control  " type="search" placeholder="Search" aria-label="Search">
        </div>
        <div class="btn-search">
          <button class="btn btn-outline my-2 my-sm-0" type="submit"><img src="../images/bx-search-alt.svg"
              alt=""></button>
        </div>
      </form>

    </section>

    <div class="tabla">
      <div class="row justify-content-center align-items-center g-2">

        <div class="container">
          <table  class="table table-striped" id="data-table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Tipo Documento</th>
                <th scope="col">Documento</th>
                <th scope="col">Acudiente</th>
                <th scope="col">Beneficiario</th>                
                <th scope="col">Telefono</th>
                <th scope="col" class="th_center">Opciones</th>
              </tr>
            </thead>
            <tbody>

            </tbody>

          </table>
          <hr>
          <div class="dow_excel">
            <button onclick="exportTableToExcel('data-table')" type="submit" class="fa fa-download btn btn-success"
              name="" id="boton ">
            </button>
            <div class="pagination" id="pagination">
              <a id="prevPage">Anterior</a>
              <span id="currentPage">
                <h6>1</h6>
              </span>
              <a id="nextPage">Siguiente</a>
            </div>

          </div>
        </div>

      </div>

    </div>
  </div>



</main>



<script src="../js/acudiente/funcionesIndex.js"></script>

{{>footer}}

</body>

</html>